<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:DazContentInstaller.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Width="700" Height="600" MinWidth="700"
        MinHeight="500" WindowStartupLocation="CenterOwner"
        x:Class="DazContentInstaller.Views.SettingsWindow"
        x:DataType="viewModels:SettingsWindowViewModel"
        Title="Settings - DAZ Asset Manager">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <viewModels:SettingsWindowViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="*,Auto">
        <!-- Main Content -->
        <TabControl Grid.Row="0" Margin="10">
            <!-- Asset Libraries Tab -->
            <TabItem Header="Asset Libraries">
                <Grid RowDefinitions="Auto,*,Auto" Margin="10">
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="Manage your DAZ Studio asset libraries. These are the locations where assets will be installed."
                               TextWrapping="Wrap" Margin="0,0,0,15" Foreground="#666666" />
                    <!-- Libraries List -->
                    <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <Grid RowDefinitions="Auto,*">
                            <!-- List Header -->
                            <Grid Grid.Row="0" Background="#F8F8F8F8" ColumnDefinitions="*,120,80,100,40" Height="35">
                                <TextBlock Grid.Column="0" Text="Name" FontWeight="Bold" VerticalAlignment="Center"
                                           Margin="10,0" />
                                <TextBlock Grid.Column="1" Text="Path" FontWeight="Bold"
                                           VerticalAlignment="Center" Margin="10,0" />
                                <TextBlock Grid.Column="2" Text="Default" FontWeight="Bold"
                                           VerticalAlignment="Center" Margin="10,0" />
                                <TextBlock Grid.Column="3" Text="Status" FontWeight="Bold"
                                           VerticalAlignment="Center" Margin="10,0" />
                            </Grid>

                            <!-- Libraries DataGrid -->
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding AssetLibraries}"
                                      AutoGenerateColumns="False"
                                      CanUserReorderColumns="False"
                                      CanUserSortColumns="False"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="None"
                                      SelectionMode="Single"
                                      MinHeight="300">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Name}"
                                                         BorderThickness="0"
                                                         Background="Transparent"
                                                         Margin="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Path}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip.Tip="{Binding Path}"
                                                               Margin="5" />
                                                    <Button Grid.Column="1"
                                                            Content="..."
                                                            Padding="5,2"
                                                            Margin="2"
                                                            Click="OnBrowsePathClick"
                                                            Tag="{Binding}" />
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <RadioButton IsChecked="{Binding IsDefault}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             GroupName="DefaultLibrary" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="40">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="×"
                                                        Foreground="Red"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="5,2"
                                                        Click="OnRemoveLibraryClick"
                                                        Tag="{Binding}"
                                                        ToolTip.Tip="Remove library" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                    
                    <!-- Add Library Controls -->
                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto,Auto" Margin="0,15,0,0">
                        <Button Grid.Column="0" 
                                Name="AddLibraryButton" 
                                Content="Add Library" 
                                Padding="10,5"
                                Click="OnAddLibraryClick"/>
                        <Button Grid.Column="2" 
                                Name="AutoDetectButton" 
                                Content="Auto-Detect" 
                                Padding="10,5" 
                                Margin="5,0"
                                Command="{Binding AutoDetectClick}"/>
                        <Button Grid.Column="3" 
                                Name="ImportButton" 
                                Content="Import..." 
                                Padding="10,5"
                                Click="OnImportClick"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- General Settings Tab -->
            <TabItem Header="General">
                <ScrollViewer>
                    <StackPanel Margin="20" Spacing="15">
            
                        <TextBlock Text="Installation Options" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <CheckBox Name="AutoDetectCheckBox" 
                                  Content="Automatically detect DAZ Studio libraries on startup"
                                  IsChecked="{Binding Path=AutoDetectDazLibraries}"/>

                        <CheckBox Name="CreateBackupCheckBox" 
                                  Content="Create backup before installing assets"
                                  IsChecked="{Binding CreateBackupBeforeInstall}"/>

                        <Separator Margin="0,10"/>

                        <TextBlock Text="Directories" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <TextBlock Grid.Column="0" 
                                       Text="Temp Directory:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" 
                                     Name="TempDirectoryTextBox"
                                     Text="{Binding TempDirectory}"
                                     Watermark="Default system temp directory"/>
                            <Button Grid.Column="2" 
                                    Content="Browse..." 
                                    Padding="10,5" 
                                    Margin="5,0,0,0"
                                    Click="OnBrowseTempDirectoryClick"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Dialog Buttons -->
        <Border Grid.Row="1" 
                Background="#F8F8F8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="15,10">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <Button Grid.Column="1" 
                        Name="OkButton" 
                        Content="OK" 
                        Padding="20,8" 
                        Margin="0,0,10,0"
                        Click="OnOkClick"
                        IsDefault="True"/>
                <Button Grid.Column="2" 
                        Name="CancelButton" 
                        Content="Cancel" 
                        Padding="20,8"
                        Click="OnCancelClick"/>
            </Grid>
        </Border>
    </Grid>
</Window>